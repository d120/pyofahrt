% Kapiteldeckblätter
% 1: Kapitelname
% 2: Bild
% 3: Zitat
% 4: Autor des Zitats
\newcommand{\kapitel}[4]{%
	\addchap{#1}
	\dictum[#4]{#3}
	\vfill
	\ifthenelse{\equal{#2}{}}{}{
	\begin{center}
	\includegraphics[width=10cm]{#2}
	\end{center}}
	\newpage
}

% Bild mit Unterschrift
% 1: Bild
% 2: Bildgröße
% 3: Bildunterschrift
% 4: Bildautor
\newcommand{\bildmitunterschrift}[4]{%
	\begin{center}
	\includegraphics[#2]{#1}

	#3 
	
	\ifthenelse{\equal{#4}{}}{}{\sffamily\tiny (Bild: #4)}
	\end{center}
}


% \workshop
% 1: Titel
% 2: Anbietende Personen
% 3: Zeitslots
