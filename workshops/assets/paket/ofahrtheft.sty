	#4
	
	\vspace{0.5cm}

	\textbf{\sffamily{Maximale Teilnehmer*innenzahl: #5}}\\
	\textbf{\sffamily{Benötigtes Material: #6}}\\
	\textbf{\sffamily{Voraussetzung zur Teilnahme: #7}}\\
	\textbf{\sffamily{Sonstige Infos: #8}}\\
	
	\newpage
}

