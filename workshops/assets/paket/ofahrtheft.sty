\newcommand{\workshop}[9]{%
	\addsec{#1 \hfill \Smiley~\HollowBox}
	\textbf{\sffamily{Anbietende Person(en): #2}}\\
	\textbf{\sffamily{Zeitslot: #3}}\\
	\textbf{\sffamily{Raum: #9}}\\
